{
	"name": "devcontainer",
	"build": {
		"context": "..",
		"dockerfile": "dev.Dockerfile"
	},
	"updateContentCommand": ".devcontainer/updateContent.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	},
	"initializeCommand": "xhost +SI:localuser:root",	
	"runArgs": [
		"--privileged",
		"--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"
	]
}